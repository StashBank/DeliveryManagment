<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_marginLeft="3dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_height="match_parent"
			android:text="@string/delivery_item_number_lbl"
			android:textSize="@dimen/item_text_size"
			android:layout_width="@dimen/item_label_width"/>

		<TextView
			android:id="@+id/item_number"
			android:layout_height="match_parent"
			android:text="0000000000"
			android:textSize="18sp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"
			android:layout_width="match_parent"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="@dimen/item_label_width"
			android:text="@string/delivery_item_client_lbl"
			android:textSize="@dimen/item_text_size"/>

		<TextView
			android:id="@+id/item_client"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Client"
			android:textSize="@dimen/item_text_size"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="32dp"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="@dimen/item_label_width"
			android:text="@string/delivery_item_mobile_lbl"
			android:textSize="@dimen/item_text_size"/>

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp">

		<TextView
			android:id="@+id/item_mobile"
			android:text="Mobile"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_alignParentLeft="true"
			android:textSize="@dimen/item_text_size" />

		<Button
			android:id="@+id/item_btn_call"
			android:layout_height="wrap_content"
			android:layout_width="36dp"
			android:drawableEnd="@drawable/ic_action_call"
			android:drawableRight="@drawable/ic_action_call"
			android:layout_alignParentRight="true"
			android:textSize="10sp"
			android:background="#0000"
			android:layout_marginRight="12dp"/>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="64dp"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="@dimen/item_label_width"
			android:text="@string/delivery_item_address_lbl"
			android:textSize="@dimen/item_text_size"/>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">

		<TextView
			android:id="@+id/item_address"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
			android:text="Address"
			android:textSize="@dimen/item_text_size_small" />

        <Button
            android:id="@+id/item_btn_navigation"
            android:layout_height="wrap_content"
            android:layout_width="36dp"
            android:drawableEnd="@drawable/ic_action_open_map"
            android:drawableRight="@drawable/ic_action_open_map"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:background="#0000"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/item_address"/>

        </RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="@dimen/item_label_width"
			android:text="@string/delivery_item_amount_lbl"
			android:textSize="@dimen/item_text_size"/>

		<TextView
			android:id="@+id/item_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ammount"
			android:textSize="@dimen/item_text_size"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="32dp"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="@dimen/item_label_width"
			android:textSize="@dimen/item_text_size"
			android:text="@string/delivery_item_payed_lbl"/>
		
		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp">

			<CheckBox
				android:id="@+id/item_payed"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:layout_alignParentLeft="true"/>

			<Button
				android:id="@+id/item_btn_pay"
				android:layout_height="wrap_content"
				android:layout_width="96dp"
				android:text="@string/delivery_item_btn_pay"
				android:textSize="10sp"
				android:layout_alignParentRight="true"
				android:textColor="#0A0FEA"/>

		</RelativeLayout>

	</LinearLayout>
	
	<LinearLayout
		android:layout_height="32dp"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="@dimen/item_label_width"
			android:textSize="@dimen/item_text_size"
			android:text="@string/delivery_item_delivered_lbl"/>
		
		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp">
			
			<CheckBox
				android:id="@+id/item_delivered"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:layout_alignParentLeft="true"/>

			<Button
				android:id="@+id/item_btn_delivered"
				android:layout_height="wrap_content"
				android:layout_width="96dp"
				android:text="@string/delivery_item_btn_delivered"
				android:layout_alignParentRight="true"
				android:textSize="10sp"
				android:textColor="#0A0FEA"/>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>

